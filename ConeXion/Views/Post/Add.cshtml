@model AddPostViewModel

@{
    ViewBag.Title = "Add a new Post";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.TextContent" class="form-label">Content</label>
                <input asp-for="@Model.TextContent" class="form-control" aria-required="true" />
                <span asp-validation-for="TextContent" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageData" class="form-label">Image URL</label>
                <input asp-for="@Model.ImageData" class="form-control" aria-required="true" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}